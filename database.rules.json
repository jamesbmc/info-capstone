{
    "rules": {
        "users": {
            ".read": true,
            ".write": true
        },
        "posts": {
            ".read": "auth != null",
            ".write": "auth != null"
        },
        "comments": {
            ".read": "auth != null",
            ".write": "auth != null",
            ".indexOn": ["date", "postID"]
        }
    }
}
