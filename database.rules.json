{
    "rules": {
        "users": {
            ".read": true,
            ".write": true
        },
        "posts": {
            ".read": true,
            ".write": "auth != null",
            ".indexOn": "date"
        },
        "comments": {
            ".read": "auth != null",
            ".write": "auth != null",
            ".indexOn": ["date", "postID"]
        },
        "members": {
          ".read": true,
          ".write": true
        }
    }
}
